# Airflow Credentials
AIRFLOW_UID=1000
AIRFLOW_PROJ_DIR=../mnt/airflow
AIRFLOW_VERSION=2.10.0

# MySQL Database Configuration for MLFlow
MYSQL_DATABASE=mlflow_db
MYSQL_USER=mlflow_user
MYSQL_PASSWORD=mlflow
MYSQL_ROOT_PASSWORD=password

# PostgreSQL Database Configuration for Airflow
AIRFLOW_POSTGRES_DATABASE=airflow
AIRFLOW_POSTGRES_USER=airflow
AIRFLOW_POSTGRES_PASSWORD=airflow
AIRFLOW_POSTGRES_ROOT_PASSWORD=password

# MinIO Configuration
MINIO_ACCESS_KEY=jared
MINIO_SECRET_KEY=password
MLFLOW_DEFAULT_BUCKET=mlflow
POLYGON_DEFAULT_BUCKET=polygon

# AWS S3 Configuration for MLFlow
AWS_ACCESS_KEY_ID=jared
