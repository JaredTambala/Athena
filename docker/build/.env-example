AWS_REGION=eu-west-1

# Airflow Security Configuration
AIRFLOW_FERNET_KEY=your_fernet_key_here   # Generate this using `openssl rand -base64 32` or `python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"`
AIRFLOW_SECRET_KEY=your_secret_key_here   # Generate this securely, e.g., using `openssl rand -base64 32` or similar.

# PostgreSQL for Hive Metastore
POSTGRES_USER=jared
POSTGRES_PASSWORD=password
POSTGRES_DB=metastore

# Maria DB for Hive Metastore
MARIADB_ROOT_PASSWORD=password
